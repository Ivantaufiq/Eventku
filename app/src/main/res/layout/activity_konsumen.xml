<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".KonsumenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imagekonsumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profil"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Nama"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/nama_konsumen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Eza Aulia Praminsa"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat,RtlSymmetry"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Alamat"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/alamat_konsumen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Kota Baru"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat,RtlSymmetry"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ttl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="TTL"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/ttl_konsumen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="9 September 2000"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat,RtlSymmetry"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Gender"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/gender_konsumen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Perempuan"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat,RtlSymmetry"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp">

                <Button
                    android:id="@+id/edit_profil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profil"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/daftar_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar Event"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_corner"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
