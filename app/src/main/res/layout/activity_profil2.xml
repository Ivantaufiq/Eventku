<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Intent.Profil2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="12dp"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:tint="@color/putih"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textColor="@color/putih"
            android:textSize="22dp"
            android:layout_marginLeft="35dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/foto" />

                <Button
                    android:id="@+id/gantifoto"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:text="Ubah Foto"
                    android:textSize="11dp"
                    android:textColor="@color/putih"
                    android:textAllCaps="false"/>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/inputnama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ivan Taufiqurrahman"
                    />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/inputalamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perum 2"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/simpanprofil"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/round"
            android:text="Simpan"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/putih"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:onClick="ubahemail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:text="Ubah Email"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="Atur"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_24dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:onClick="ubahpassword">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ubah Password"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="Atur"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_24dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:onClick="hubungikami">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hubungi Kami"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_blue_24dp"
                    android:text=""
                    android:textSize="14dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/round"
            android:text="Logout"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/putih"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>